<%= form_with model: question, class: "form_new_edit" do |form| %>
    <% if question.id.nil? %>
        <div class="head">
        <h2>新規登録</h2>
        </div>
    <% else %>
        <div class="head">
        <h2>編集</h2>
        </div>
        <span>付いているタグ</span>
        <% @tags.each do |tag| %>
          <p><%= "・#{tag.tag_name}" %></p>
        <% end %>
    <% end %>

    <%= form.text_field :tag_name,placeholder: "タグを入力してください",class: "form_question_tag_area" %>
    <%= form.text_area :question, placeholder: placeholder_new_line_question,class: "form_question_text_area" ,size: "30x10" %>

    <%= form.fields_for :answers do |answer| %>
      <p class="answer_text_area"><%= answer.text_area :answer,placeholder: placeholder_new_line_answer,class: "form_answer_text_area",size: "30x10" %></p>
    <% end%>

  <%= form.submit "送信", class: "button"%>
<% end %>